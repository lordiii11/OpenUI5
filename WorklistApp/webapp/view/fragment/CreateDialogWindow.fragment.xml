<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
    <Dialog class='sapUiContentPadding' title="Create header" beforeOpen="onDialogBeforeOpen">
        <content>
            <VBox >
                <VBox >
                    <Label text="HeaderID" labelFor="idHeaderID"/>
                    <Input 
                        id='idHeaderID'
                        value="{HeaderID}"/>
                </VBox>
                <VBox >
                    <Label text="DocumentNumber" labelFor="idDocumentNumber"/>
                    <Input 
                        id='idDocumentNumber'
                        value="{DocumentNumber}"/>
                </VBox>
                <VBox >
                    <Label text="DocumentDate" labelFor="idDocumentDate"/>
                    <DatePicker 
                    id='idDocumentDate'
                    value="{
                        path:'DocumentDate',
                        type:'sap.ui.model.type.Date',
                        formatOptions:{
                            pattern: 'yyyy-MM-dd'
                        }
                    }"/>
                </VBox>
                <VBox >
                    <Label text="PlantText" labelFor="idPlantText"/>
                    <Input 
                        id='idPlantText'
                        value="{PlantText}"/>
                </VBox>
                <VBox >
                    <Label text="RegionText" labelFor="idRegionText"/>
                    <Input 
                        id='idRegionText'
                        value="{RegionText}"/>
                </VBox>
                <VBox >
                    <Label text="Description" labelFor="idDescription"/>
                    <Input 
                        id='idDescription'
                        value="{Description}"/>
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button type="Emphasized" press="onSaveButtonPress" text="Save"/>
        </beginButton>
        <endButton>
            <Button type="Transparent" press="onExitButtonPress" text="Exit"/>
        </endButton>
    </Dialog>
</c:FragmentDefinition>