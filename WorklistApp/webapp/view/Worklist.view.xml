<mvc:View
	controllerName="zjblessons.WorklistApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/zjblessons_base_Headers',
					sorter: {
						path: 'DocumentNumber',
						descending: false
					}
				}"
				growing="true"
				growingScrollToLoad="true">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>tableNameColumnDocumentNumber}"/>
					</Column>
					<Column>
						<Text text="{i18n>tableNameColumnDocumentDate}"/>
					</Column>
					<Column>
						<Text text="{i18n>tableNameColumnPlantText}"/>
					</Column>
					<Column>
						<Text text="{i18n>tableNameColumnRegionText}"/>
					</Column>
					<Column>
						<Text text="{i18n>tableNameColumnDescription}"/>
					</Column>
					<Column>
						<Text text="{i18n>tableNameColumnCreated}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{DocumentNumber}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{
									path:'DocumentDate',
									type:'sap.ui.model.type.Date',
									formatOptions:{
										style:'short'
									}
								}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{PlantText}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{RegionText}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{Description}"/>
						</cells>
						<cells>
							<ObjectIdentifier
								title="{
									path:'Created',
									type:'sap.ui.model.type.Date',
									formatOptions:{
										pattern:'HH:mm dd/MM/yyyy'
									}
								}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>