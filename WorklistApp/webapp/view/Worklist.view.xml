<mvc:View
	controllerName="zjblessons.WorklistApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="{i18n>worklistTitle}">
		<Table
			id="table"
			width="auto"
			growing="true"
			growingScrollToLoad="true"
			growingThreshold="15">

			<headerToolbar>
				<Toolbar>
					<Title id="tableCount" text="{= ${worklistView>/sCount}}"/>
					<ToolbarSpacer />
					<DateRangeSelection
                        id="dateRangeSelection"
                        delimiter=" - "
                        displayFormat="yyyy-MM-dd"
                        change="onDateRangeChange"
                        width="auto"/>
					<SearchField
						tooltip="{i18n>worklistSearchTooltipDocumentNumber}"
						search="onSearchByDocumentNumber"
						width="auto">
					</SearchField>
					<SearchField
						tooltip="{i18n>worklistSearchTooltipPlantText}"
						search="onSearchByPlantText"
						width="auto">
					</SearchField>
					<Button 
					icon="{i18n>iAdd}"
					type="Ghost"
					press="onButtonPressCreate"/>
					<Button 
					icon="{i18n>iRefresh}"
					type="Transparent"
					press="onButtonPressRefresh"/>
				</Toolbar>
			</headerToolbar>

			<columns>
				<Column>
					<Text text="{i18n>tableNameColumnDocumentNumber}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnDocumentDate}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnPlantText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnRegionText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnDescription}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnCreated}"/>
				</Column>
				<Column width="3%">
					<Text text=""/>
				</Column>
			</columns>
		</Table>
	</Page>



</mvc:View>