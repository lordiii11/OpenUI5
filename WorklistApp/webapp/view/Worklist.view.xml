<mvc:View
	controllerName="zjblessons.WorklistApp.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="{i18n>worklistTitle}">
		<Table
			id="table"
			width="auto"
			items="{
				path: '/zjblessons_base_Headers',
				sorter: {
					path: 'DocumentDate',
					descending: true
				}
			}"
			growing="true"
			growingScrollToLoad="true">

			<headerToolbar>
				<Toolbar>
					<ToolbarSpacer />
					<SearchField
						tooltip="{i18n>worklistSearchTooltipDocumentNumber}"
						search="onSearchByDocumentNumber"
						width="auto">
					</SearchField>
					<SearchField
						tooltip="{i18n>worklistSearchTooltipPlantText}"
						search="onSearchByPlantText"
						width="auto">
					</SearchField>
				</Toolbar>
			</headerToolbar>

			<columns>
				<Column>
					<Text text="{i18n>tableNameColumnDocumentNumber}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnDocumentDate}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnPlantText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnRegionText}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnDescription}"/>
				</Column>
				<Column>
					<Text text="{i18n>tableNameColumnCreated}"/>
				</Column>
			</columns>

			<items>
				<ColumnListItem
					type="Navigation"
					press="onPress">
					<cells>
						<ObjectIdentifier
							title="{DocumentNumber}"/>
					</cells>
					<cells>
						<ObjectIdentifier
							title="{
								path:'DocumentDate',
								type:'sap.ui.model.type.Date',
								formatOptions:{
									style:'short'
								}
							}"/>
					</cells>
					<cells>
						<ObjectIdentifier
							title="{PlantText}"/>
					</cells>
					<cells>
						<ObjectIdentifier
							title="{RegionText}"/>
					</cells>
					<cells>
						<ObjectIdentifier
							title="{Description}"/>
					</cells>
					<cells>
						<ObjectIdentifier
							title="{
								path:'Created',
								type:'sap.ui.model.type.Date',
								formatOptions:{
									pattern:'HH:mm dd/MM/yyyy'
								}
							}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>



</mvc:View>